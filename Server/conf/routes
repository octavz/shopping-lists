# tags:
#   - List operations
# summary: Create List
# consumes:
#   - application/json
# produces:
#   - application/json
# parameters:
#   - name: body
#     in: body
#     description: register data
#     required: true
#     schema:
#       $ref: '#/definitions/org.shopping.dto.ListDTO'
#   - name: "Authorization"
#     in: "header"
#     description: "Authorization code"
#     required: true
#     type: "string"
# responses:
#   201:
#     schema:
#       $ref: '#/definitions/org.shopping.dto.ListDTO'
#   401:
#     description: Unauthorized
#     schema:
#       $ref: '#/definitions/org.shopping.dto.ErrorDTO'
